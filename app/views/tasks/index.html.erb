<div class="banner">
  <div class="container">
    <h1> My tasks for today</h1>
  </div>
</div>

<div class="container">

  <div class="tasks-list">
    <ul>
      <% @tasks.each do |task| %>

      <li>
      <% if task.completed %>
      <i class="fas fa-check-square"> </i>
            <% else %>
        <i class="far fa-square"></i>
        <% end %>

        <%= link_to task_path(task.id) do %>
        <strong> <%= task.title %></strong>
        <% end %>

        <%= link_to task_path(task),
                method: :delete,
                data: { confirm: "Are you sure?" } do %>
            <i class="fas fa-trash"></i>
              <% end %>

          </li>

      <% end %>
    </ul>
  </div>

  <%= link_to new_task_path do %>
  <i class="fas fa-plus"> Add new Task. </i>
  <% end %>

</div>
